{
  "include": ["**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "noEmit": true,

    "target": "es2019",
    "lib": ["es2019", "es2020.bigint"],

    "types": [],

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
