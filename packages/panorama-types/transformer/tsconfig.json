{
  "files": ["index.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "composite": true,
    "sourceMap": false,
    "declarationMap": false,

    "target": "es2018",
    "lib": ["es2018"],

    "types": ["@types/node"],

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
